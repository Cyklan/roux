{
	"name": "Second State Rust Node.js",
	"dockerFile": "Dockerfile",

    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "bash login": {
                      "path": "/bin/bash",
                      "args": ["-l"]
                    }
                },
                "terminal.integrated.defaultProfile.linux": "zsh",
                "lldb.executable": "/usr/bin/lldb"
            },
            "extensions": [
                "rust-lang.rust",
                "bungcip.better-toml",
                "vadimcn.vscode-lldb",
                "dbaeumer.vscode-eslint"
            ]
        }
    },

	"forwardPorts": [3000]
}